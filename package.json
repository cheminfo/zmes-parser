{
  "name": "zmes-parser",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Parse Malvern Panalytical Zetasizer .zmes files (ZS XPLORER DLS measurements)",
  "keywords": [
    "zmes",
    "malvern",
    "zetasizer",
    "DLS",
    "dynamic-light-scattering",
    "particle-size",
    "parser"
  ],
  "author": "Luc Patiny",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "clean": "rimraf coverage lib",
    "eslint": "eslint .",
    "eslint-fix": "eslint . --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check .",
    "prettier-write": "prettier --write .",
    "test": "npm run test-only && npm run check-types && npm run eslint && npm run prettier",
    "test-only": "vitest run --coverage",
    "tsc": "npm run clean && npm run tsc-build",
    "tsc-build": "tsc --project tsconfig.build.json"
  },
  "devDependencies": {
    "@sqlite.org/sqlite-wasm": "^3.51.2-build6",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@zakodium/tsconfig": "^1.0.2",
    "eslint": "^9.39.3",
    "eslint-config-cheminfo-typescript": "^21.1.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Parse zmes files/zmes-parser.git"
  },
  "bugs": {
    "url": "https://github.com/Parse zmes files/zmes-parser/issues"
  },
  "homepage": "https://github.com/Parse zmes files/zmes-parser#readme"
}
